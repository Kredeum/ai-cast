{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "format": {
      "inputs": [
        "src/**"
      ],
      "outputLogs": "new-only"
    },
    "check": {
      "dependsOn": [
        "format"
      ],
      "inputs": [
        "src/**"
      ],
      "outputLogs": "new-only"
    }
  }
}